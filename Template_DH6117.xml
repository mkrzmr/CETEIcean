   <text>
      <body>
         <listPerson>
            <!-- repeat '<person></person>' container for each new entry -->
            <person xml:id="pers_jane_doe">
               <persName>Jane Doe</persName>
               <figure>
                  <graphic url="pers-jane-doe-biopic.jpg"/>
                  <head>Jane Doe</head>
                  <figDesc>A photo of Jane Doe from spring 2016</figDesc>
               </figure>
               <figure>
                  <graphic url="pers-jane-doe-art.jpg"/>
                  <head>Jane Doe</head>
                  <figDesc>Artwork XX by Jane Doe</figDesc>
               </figure>
               <birth>
                  <placeName type="Birthyear">Born in</placeName>
               </birth>
               <education>
                  <orgName type="Organisation">Name of Institution</orgName></education>
               <langKnowledge type="Language">
                  <langKnown tag="en">first language</langKnown>
               </langKnowledge>
               <nationality>
                  <placeName type="Nationality">Egypt</placeName></nationality>
               <occupation type="Occupation">Subject of a TAPAS Personography template</occupation>
               <residence type="residence">
                  <placeName ref="home">Place of Residence </placeName>
               </residence>
               <note>Here goes some interesting information... <ref target="https://www.ucc.ie">lets try a link</ref>  </note>
            </person>
            
         </listPerson>
      </body>
